  <h2 style="margin:0 0 8px 0">Renesas BLEÂ 100â€¯ms Logger</h2>
  <div class="toolbar">
    <button id="btn">Connect &amp; Start Logging</button>
    <a id="dl" class="btn secondary" style="display:none;">DownloadÂ CSV</a>

    <!-- --- Calibration Inputs --- -->
    <div class="field"><label for="t25">R<sub>T</sub>@25â€¯Â°C (Î©)</label><input id="t25" type="number" step="any" placeholder="e.g. 30"></div>
    <div class="field"><label for="t50">R<sub>T</sub>@50â€¯Â°C (Î©)</label><input id="t50" type="number" step="any" placeholder="e.g. 60"></div>
    <div class="field"><label for="ph1">R<sub>pH</sub>@pHâ€¯1 (kÎ©)</label><input id="ph1" type="number" step="any" placeholder="e.g. 30"></div>
    <div class="field"><label for="ph8">R<sub>pH</sub>@pHâ€¯8 (kÎ©)</label><input id="ph8" type="number" step="any" placeholder="e.g. 250"></div>
  </div>

